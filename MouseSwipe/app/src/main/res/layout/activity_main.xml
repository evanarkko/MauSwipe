<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:background = "@drawable/starry_sky">

    <Button
        android:background = "@drawable/mouse_5"
        android:textSize="@dimen/mainactivity_button_text_size"
        android:layout_width="120dp"
        android:layout_height="169dp"
        android:layout_marginBottom="@dimen/mainactivity_button_margin"
        android:text="@string/play_game_button"
        android:layout_gravity="center_vertical"
        android:onClick="playGame"/>

    <Button
        android:background = "@drawable/enamy_right_green"
        android:textSize="@dimen/mainactivity_button_text_size"
        android:textColor="@color/white"
        android:layout_width="120dp"
        android:layout_height="169dp"
        android:layout_marginBottom="@dimen/mainactivity_button_margin"
        android:text="@string/high_scores_button"
        android:layout_gravity="center_vertical"
        android:onClick="highScores"/>

    <Button
        android:background = "@drawable/ball_white"
        android:textSize="@dimen/mainactivity_button_text_size"
        android:textColor="@color/grey"
        android:layout_width="wrap_content"
        android:layout_height="169dp"
        android:layout_marginBottom="@dimen/mainactivity_button_margin"
        android:text="@string/settings_button"
        android:onClick="settings"/>

    android:layout_width="wrap_content"
    android:layout_height="54dp"></TableLayout>
